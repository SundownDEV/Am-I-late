{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Sticker</th>
                <td><img src="{{ question.sticker }}" alt=""></td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ question.text }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ question.date ? question.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('question_index') }}">back to list</a>

    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>

    <hr>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}